<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Android 15+ edge-to-edge support -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>

        <!-- Enhanced system bar handling for Android 15+ -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Don't use fitsSystemWindows - let Capacitor handle it -->
        <item name="android:fitsSystemWindows">false</item>

        <!-- Display cutout support for all Android versions -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>

        <!-- Android 10+ gesture navigation support -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>

        <!-- Android 15+ edge-to-edge enhancements -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="35">always</item>

        <!-- Large screen and foldable support -->
        <item name="android:resizeableActivity" tools:targetApi="24">true</item>
        <item name="android:supportsPictureInPicture" tools:targetApi="24">false</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Same enhanced system bar handling -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>

        <!-- Android 12+ splash screen API support -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/splashBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/splashPrimary</item>
    </style>

</resources>
