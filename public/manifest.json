  "shortcuts": [
    {
      "name": "Add Item",
      "short_name": "Add",
      "description": "Quickly add item to inventory",
      "url": "/inventory?action=add",
      "icons": [{ "src": "/icons/add-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Meal Planning",
      "short_name": "Meals",
      "description": "Plan your meals for the week",
      "url": "/meal-planning",
      "icons": [{ "src": "/icons/meal-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Recipes",
      "short_name": "Recipes",
      "description": "Browse your recipe collection",
      "url": "/recipes",
      "icons": [{ "src": "/icons/recipe-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "AI Shopping List",
      "short_name": "AI Shopping",
      "description": "Generate AI-optimized shopping lists",
      "url": "/shopping",
      "icons": [{ "src": "/icons/shopping-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Scan Barcode",
      "short_name": "Scan",
      "description": "Scan product barcodes",
      "url": "/inventory?action=scan",
      "icons": [{ "src": "/icons/scan-shortcut.png", "sizes": "96x96" }]
    }
  ],

  "share_target": {
    "action": "/import",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "recipe_data",
          "accept": ["text/plain", ".txt", ".csv", "image/*", ".json"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/plain": [".txt"],
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/x-comma-separated-values": [".csv"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+recipe",
      "url": "/recipes/import?url=%s"
    },
    {
      "protocol": "web+shoppinglist",
      "url": "/shopping/import?url=%s"
    }
  ],

  "screenshots": [
    {
      "src": "/screenshots/home-narrow.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard view on mobile"
    },
    {
      "src": "/screenshots/shopping-ai-narrow.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AI-powered shopping lists on mobile"
    },
    {
      "src": "/screenshots/home-wide.png",
      "sizes": "1024x768",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop dashboard"
    }
  ],

  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}